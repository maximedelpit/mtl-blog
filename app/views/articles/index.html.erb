<p id="notice"><%= notice %></p>

<h1>Articles</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |a| %>
      <%= render "card", article: a, name: "Max" %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_article_path, {class: 'btn btn-primary', id: 'new_article'} do %>
  <i class="fa fa-plus-circle" aria-hidden="true"></i> New Article
<% end %>
